<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_about_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/icon_launcher" />

    <ImageView
        android:id="@+id/iv_about_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:src="@mipmap/ic_close" />


    <TextView
        android:id="@+id/tv_about_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/iv_about_icon"
        android:layout_below="@+id/iv_about_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Manager_Beat_1.0.2"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_about_desc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_about_app_version"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/app_use_desc_title"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_about_desc_title"
        android:layout_marginTop="10dp"
        android:gravity="start|top"
        android:lineSpacingExtra="5dp"
        android:padding="10dp"
        android:text="@string/app_use_desc"
        android:textSize="16sp" />


</RelativeLayout>
